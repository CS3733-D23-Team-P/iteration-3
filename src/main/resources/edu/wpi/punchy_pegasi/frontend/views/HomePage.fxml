<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import io.github.palexdev.materialfx.controls.MFXComboBox?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../css/HomePageBackground.css" xmlns="http://javafx.com/javafx/"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.HomePageController">
    <center>
        <HBox alignment="CENTER" style="-fx-background-color: -pfx-background" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                <Label textAlignment="CENTER" text="Welcome back!&#13;Here are your outstanding service requests. Use the drop down menu to see notifications.">
                    <font>
                        <Font name="System Bold" size="24.0"/>
                    </font>
                    <padding>
                        <Insets topRightBottomLeft="10"/>
                    </padding>
                </Label>
                <MFXComboBox fx:id="notificationComboBox" promptText="Select request type" onAction="#openSelectedWindow">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Meals"/>
                            <String fx:value="Flowers"/>
                            <String fx:value="Office Supplies"/>
                            <String fx:value="Conference Room"/>
                            <String fx:value="Furniture"/>
                        </FXCollections>
                    </items>
                </MFXComboBox>
                <HBox alignment="CENTER">
                    <LineChart>
                        <xAxis>
                            <NumberAxis fx:id="xAxis" label="X axis label" side="BOTTOM"/>
                        </xAxis>
                        <yAxis>
                            <NumberAxis fx:id="yAxis" label="Y axis label" side="LEFT"/>
                        </yAxis>
                    </LineChart>

                </HBox>
                <VBox VBox.vgrow="ALWAYS" fx:id="tableContainer">
                    <padding>
                        <Insets topRightBottomLeft="20"/>
                    </padding>
                </VBox>
            </VBox>
        </HBox>

    </center>
</BorderPane>