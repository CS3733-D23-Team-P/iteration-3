<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXTableView?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import edu.wpi.punchy_pegasi.frontend.components.PFXCardVertical?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.GridPane?>
<?import impl.org.controlsfx.skin.GridRow?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<BorderPane stylesheets="@../css/HomePage.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.HomePageController">
    <center>
        <StackPane>
            <HBox alignment="CENTER" style="-fx-background-color: -pfx-background">
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="ALWAYS"/>
                        <RowConstraints vgrow="ALWAYS"/>
                    </rowConstraints>
                    <children>
                        <HBox alignment="CENTER" style="-fx-background-color: -pfx-background"
                              BorderPane.alignment="CENTER"
                              GridPane.rowIndex="0" maxHeight="Infinity">
                            <VBox alignment="CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                                <HBox alignment="CENTER">
                                    <HBox alignment="CENTER">
                                        <StackPane>
                                            <padding>
                                                <Insets topRightBottomLeft="25"/>
                                            </padding>
                                            <VBox VBox.vgrow="ALWAYS" fx:id="pie">
                                                <PieChart fx:id="piechart" VBox.vgrow="ALWAYS"/>
                                            </VBox>
                                        </StackPane>
                                    </HBox>
                                    <HBox alignment="CENTER" maxHeight="Infinity">
                                        <StackPane HBox.hgrow="ALWAYS">
                                            <padding>
                                                <Insets topRightBottomLeft="25"/>
                                            </padding>
                                            <VBox VBox.vgrow="ALWAYS" fx:id="tableHolder">
                                                <PFXCardVertical fx:id="placeholderalerts" styleClass="home-page-card" VBox.vgrow="ALWAYS"/>
                                            </VBox>
                                        </StackPane>
                                    </HBox>
                                    <padding>
                                        <Insets top="25.0"/>
                                    </padding>
                                </HBox>
                            </VBox>
                        </HBox>
                        <HBox alignment="CENTER" style="-fx-background-color: -pfx-background" GridPane.rowIndex="1">
                            <padding>
                                <Insets topRightBottomLeft="20"/>
                            </padding>
                            <StackPane>
                                <MFXTableView fx:id="requestTable" stylesheets="@../css/MFXTableView.css"/>
                            </StackPane>
                        </HBox>
                    </children>
                </GridPane>
            </HBox>
        </StackPane>
    </center>
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: -pfx-background">
            <Label text="Welcome back!&#13; Check your outstanding service requests." textAlignment="CENTER"
                   BorderPane.alignment="CENTER" style="-fx-background-color: -pfx-background">
                <font>
                    <Font name="Nunito Sans" size="24.0"/>
                </font>
                <padding>
                    <Insets topRightBottomLeft="10"/>
                </padding>
            </Label>
        </HBox>
    </top>
</BorderPane>
