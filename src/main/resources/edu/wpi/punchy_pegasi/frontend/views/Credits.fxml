<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.wpi.punchy_pegasi.frontend.controllers.CreditsController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-border-color: #0067b1;">
    <top>
        <VBox alignment="TOP_LEFT" style="-fx-background-color: -pfx-background">
            <Label text="Credits&#13;" textAlignment="LEFT" BorderPane.alignment="CENTER" textFill="#0067B1" style="-fx-background-color: -pfx-background;">
                <font>
                    <Font name="Nunito Sans" size="24.0" />
                </font>
                <padding>
                    <Insets top="25" left="50" />
                </padding>
            </Label>
            <GridPane fx:id="sourceGrid" vgap="5" hgap="20" alignment="CENTER_LEFT" style="-fx-font-family: Nunito Sans; -fx-font-size: 16;">
                <Label alignment="CENTER_LEFT" text="Resource" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: 900;"/>
                <Label alignment="CENTER" text="Description" GridPane.columnIndex="1" GridPane.rowIndex="0" style="-fx-font-weight: 900;"/>
                <Label alignment="CENTER_RIGHT" text="Link" GridPane.columnIndex="2" GridPane.rowIndex="0" style="-fx-font-weight: 900;"/>
                <padding>
                    <Insets top="25" left="50"/>
                </padding>
            </GridPane>
        </VBox>
    </top>
</BorderPane>

